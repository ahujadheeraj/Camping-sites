<% include ../partials\header %>
<div class="container">
    <div class="row">
        <div style="text-align: center">
            <h1>Create a new Campground</h1>
        </div>
        <div style="width: 30%; margin:25px auto;">
            <form action="/campgrounds" method ="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Enter Price" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="Enter image url">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="description" placeholder="Enter image desc">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-lg btn-primary">GO!!!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>

    </div>

</div>



<% include ../partials\footer %>


